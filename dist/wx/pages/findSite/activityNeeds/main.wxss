@import "../../../common/vendor.wxss";

.needs-box {
  padding: 20rpx;
}
.needs-select {
  display: inline-block;
  line-height: 40rpx;
  padding: 10rpx 26rpx;
  margin: 10rpx 10rpx;
  font-size: 24rpx;
  background: #f6f7f8;
  color: #1b233c;
  border: none;
  border-radius: 6rpx;
  width: 39%;
  text-align: center;
}
.needs-active {
  display: inline-block;
  background: #f0f1f1;
  color: #11bcfd;
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 10rpx 26rpx;
  margin: 10rpx 10rpx;
  border-radius: 16rpx;
  border-radius: 6rpx;
  width: 39%;
  text-align: center;
}
.needs-box .btn {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.needs-box .resize,
.needs-box .confirm {
  width: 35%;
  display: inline-block;
  font-size: 26rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
}
.needs-box .resize {
  background-color: #c7cbcf;
  color: #fff;
}
.needs-box .confirm {
  background: linear-gradient(to right, #02d5fc 0%, #1fa5ff 100%);
  color: #fff;
}
.needs-box ._button::after {
  border: none;
}